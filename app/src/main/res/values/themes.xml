<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with modern 2025 color palette. -->
    <style name="Theme.TandoorWidget" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color: Muted teal/green -->
        <item name="colorPrimary">@color/widget_primary</item>
        <item name="colorPrimaryVariant">@color/widget_primary_variant</item>
        <item name="colorOnPrimary">@color/widget_on_primary</item>
        <!-- Secondary brand color: Warm coral/terracotta -->
        <item name="colorSecondary">@color/widget_secondary</item>
        <item name="colorSecondaryVariant">@color/widget_secondary_variant</item>
        <item name="colorOnSecondary">@color/widget_on_secondary</item>
        <!-- Surface colors -->
        <item name="colorSurface">@color/widget_surface</item>
        <item name="colorOnSurface">@color/widget_on_surface</item>
        <item name="android:colorBackground">@color/widget_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Dialog theme for popup activities (Added from Developp but using master palette) -->
    <style name="Theme.TandoorWidget.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorPrimary">@color/widget_primary</item>
        <item name="colorSecondary">@color/widget_secondary</item>
        <item name="colorSurface">@color/widget_surface</item>
        <item name="colorOnSurface">@color/widget_on_surface</item>
        <item name="android:colorBackground">@color/widget_background</item>
    </style>
</resources>
