<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/widget_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header: title + refresh -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/widget_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Tandoor"
                android:textColor="@color/widget_header_text"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/refresh_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_popup_sync"
                android:background="@android:drawable/selectable_item_background_borderless"
                android:contentDescription="Refresh"
                android:padding="8dp"
                android:scaleType="centerInside" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/debug_log_background"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp" />

        <!-- Calendar / list of day items (populated by RemoteViewsService) -->
        <ListView
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:transcriptMode="disabled" />

        <!-- Debug / error view -->
        <TextView
            android:id="@+id/error_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@color/error"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/debug_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@color/widget_day_text"
            android:textSize="11sp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp" />

    </LinearLayout>

</FrameLayout>
