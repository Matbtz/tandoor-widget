<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:padding="4dp"
    android:layout_marginBottom="2dp">

    <TextView
        android:id="@+id/day_of_week"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="start|center_vertical"
        android:textColor="@color/sand_text"
        android:textStyle="bold"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/recipes_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/day_of_week"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recipe_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:gravity="center_vertical"
            android:textColor="@color/meal_card_text"
            android:background="@drawable/meal_card_background"
            android:padding="6dp"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/recipe_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:gravity="center_vertical"
            android:textColor="@color/meal_card_text"
            android:background="@drawable/meal_card_background"
            android:padding="6dp"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/recipe_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:gravity="center_vertical"
            android:textColor="@color/meal_card_text"
            android:background="@drawable/meal_card_background"
            android:padding="6dp"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/recipe_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:gravity="center_vertical"
            android:textColor="@color/meal_card_text"
            android:background="@drawable/meal_card_background"
            android:padding="6dp"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/recipe_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:gravity="center_vertical"
            android:textColor="@color/meal_card_text"
            android:background="@drawable/meal_card_background"
            android:padding="6dp"
            android:textSize="12sp"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>
