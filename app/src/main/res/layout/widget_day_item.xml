<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="4dp"
    android:paddingEnd="4dp"
    android:paddingTop="2dp"
    android:paddingBottom="6dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/day_of_week"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:textColor="@color/day_text_high_contrast"
        android:fontFamily="sans-serif-medium"
        android:textSize="12sp"
        android:textAllCaps="true" />

    <LinearLayout
        android:id="@+id/recipes_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recipe_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:gravity="center_vertical"
            android:textColor="@color/meal_card_text"
            android:background="@drawable/ripple_meal_card"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="8dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:visibility="gone"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/recipe_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:gravity="center_vertical"
            android:textColor="@color/meal_card_text"
            android:background="@drawable/ripple_meal_card"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="8dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:visibility="gone"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/recipe_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:gravity="center_vertical"
            android:textColor="@color/meal_card_text"
            android:background="@drawable/ripple_meal_card"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="8dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:visibility="gone"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/recipe_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:gravity="center_vertical"
            android:textColor="@color/meal_card_text"
            android:background="@drawable/ripple_meal_card"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="8dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:visibility="gone"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/recipe_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:gravity="center_vertical"
            android:textColor="@color/meal_card_text"
            android:background="@drawable/ripple_meal_card"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="8dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:visibility="gone"
            android:ellipsize="end"
            android:maxLines="1" />

    </LinearLayout>

</LinearLayout>
