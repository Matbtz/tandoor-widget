<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal"
    android:padding="4dp"
    android:layout_marginBottom="2dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/day_of_week"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:textColor="@color/widget_primary"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <LinearLayout
        android:id="@+id/recipes_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recipe_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:gravity="center_vertical"
            android:textColor="#333333"
            android:background="@drawable/meal_card_background"
            android:padding="6dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:visibility="gone" />

        <TextView
            android:id="@+id/recipe_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:gravity="center_vertical"
            android:textColor="#333333"
            android:background="@drawable/meal_card_background"
            android:padding="6dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:visibility="gone" />

        <TextView
            android:id="@+id/recipe_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:gravity="center_vertical"
            android:textColor="#333333"
            android:background="@drawable/meal_card_background"
            android:padding="6dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:visibility="gone" />

        <TextView
            android:id="@+id/recipe_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:gravity="center_vertical"
            android:textColor="#333333"
            android:background="@drawable/meal_card_background"
            android:padding="6dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:visibility="gone" />

        <TextView
            android:id="@+id/recipe_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:gravity="center_vertical"
            android:textColor="#333333"
            android:background="@drawable/meal_card_background"
            android:padding="6dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
