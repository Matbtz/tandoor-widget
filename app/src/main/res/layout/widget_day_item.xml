<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <!-- Modern day indicator column with rounded background -->
    <TextView
        android:id="@+id/day_of_week"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/text_secondary"
        android:textSize="11sp"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/day_indicator_bg"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:layout_marginEnd="12dp" />

    <!-- Recipe chips container -->
    <LinearLayout
        android:id="@+id/recipes_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recipe_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_primary"
            android:textSize="13sp"
            android:background="@drawable/meal_card_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/recipe_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_primary"
            android:textSize="13sp"
            android:background="@drawable/meal_card_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/recipe_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_primary"
            android:textSize="13sp"
            android:background="@drawable/meal_card_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/recipe_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_primary"
            android:textSize="13sp"
            android:background="@drawable/meal_card_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/recipe_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_primary"
            android:textSize="13sp"
            android:background="@drawable/meal_card_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
