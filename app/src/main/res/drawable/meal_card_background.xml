<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- shadow layer -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#22000000" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
            <!-- main pill shape inset at bottom for shadow effect -->
            <item android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#E0E7FF" />
                    <stroke android:width="1dp" android:color="@color/meal_card_border" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Default state -->
    <item>
        <layer-list>
            <!-- shadow layer -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#22000000" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
            <!-- main pill shape inset at bottom for shadow effect -->
            <item android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/meal_card_background" />
                    <stroke android:width="1dp" android:color="@color/meal_card_border" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
