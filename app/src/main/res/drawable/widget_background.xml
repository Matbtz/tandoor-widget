<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Optional: Soft shadow simulation (simplified as RemoteViews doesn't support blur) -->
    <!-- We inset the shadow slightly so it doesn't clip immediately if we had padding -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
         <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <solid android:color="#00000000" /> <!-- Transparent shadow placeholder since blur isn't supported -->
        </shape>
    </item>

    <!-- Main Glass Layer -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <!-- Linear Gradient: 135deg (TL to BR) roughly matches angle 315 -->
            <!-- White 40% to White 10% -->
            <gradient
                android:type="linear"
                android:angle="315"
                android:startColor="#66FFFFFF"
                android:endColor="#1AFFFFFF" />

            <!-- Border: 1px Solid White 30% -->
            <stroke
                android:width="1dp"
                android:color="#4DFFFFFF" />
        </shape>
    </item>
</layer-list>
