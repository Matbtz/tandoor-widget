<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#22000000" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <!-- main pill shape inset at bottom for shadow effect -->
    <item android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/meal_card_multiday_background" />
            <stroke android:width="1dp" android:color="@color/meal_card_multiday_border" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>
