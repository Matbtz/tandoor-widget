<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TandoorWidget"
        tools:targetApi="31">

        <receiver
            android:name=".TandoorWidgetProvider"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.example.tandoorwidget.ACTION_REFRESH_WIDGET" />
                <action android:name="com.example.tandoorwidget.ACTION_WIDGET_LOG" />
                <action android:name="com.example.tandoorwidget.ACTION_WIDGET_ERROR" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/tandoor_widget_info" />
        </receiver>

        <service
            android:name=".TandoorWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <activity
            android:name=".ConfigActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MealPlanEditActivity"
            android:exported="false"
            android:theme="@style/Theme.TandoorWidget.Dialog" />

        <activity
            android:name=".RecipeActionActivity"
            android:exported="false"
            android:theme="@style/Theme.TandoorWidget.Dialog" />

    </application>

</manifest>
